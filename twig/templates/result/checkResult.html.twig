{% extends 'page.html.twig' %}
{% block content %}
    <div class="card">
        <div class="card-header">
            Check Results {{ result[0].getName() }}
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Check</th>
                        <th>Status</th>
                        <th>Comment</th>
                    </tr>
                </thead>
                <tbody>
                    {% for result in checkResults%}
                        {% set bg = result.isPassed() == true ? 'success' : 'danger' %}
                        {% set text = result.isPassed() == true ? 'OK' : 'FAILED' %}
                        <tr>
                            <td>
                                {{ result.getCheck().getName() }}
                            </td>
                            <td>
                                <label class="badge bg-{{bg}}">{{ text }}</label>
                            </td>
                            <td>
                                {{ result.getComment() }}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}