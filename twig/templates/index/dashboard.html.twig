{% extends 'base.html.twig' %}
{% block body %}
    <div class="p-3">
        {% set i = 0 %}

        <div class="row mt-4 mb-4">
        {% for environment in environments %}
            {# Calculate the rows, all rows should contain 4 cards #}
            {% if i == 4 %}
                {% set i = 0 %}
                </div>
                <div class="row">
            {% endif %}

            <div class="col-md-3">
                {% include 'index/envCard.html.twig' with {'env': environment, 'stats': stats[environment.getId()]} %}
            </div>
            {% set i = i + 1 %}
        {% endfor %}
        </div>
    </div>
    <script type="text/javascript">
        setTimeout(function(){
            location.reload();
        }, 60000);
    </script>
{% endblock %}